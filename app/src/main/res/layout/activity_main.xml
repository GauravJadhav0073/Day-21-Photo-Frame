<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:text="Dynamic and Stylish Photo Frame"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/vk1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/vk4"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="41dp" />

        <ImageView
            android:id="@+id/vk2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            app:layout_constraintStart_toStartOf="@+id/vk1"
            app:srcCompat="@drawable/vk1"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/vk3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:alpha="0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/vk2"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="41dp" />

        <ImageView
            android:id="@+id/vk4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:alpha="0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/vk3"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="41dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgprev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_media_rew" />

        <ImageButton
            android:id="@+id/imgnext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_media_ff" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="15dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/background"
        android:text="Virat Kohli and Anushka Sharma" />


</LinearLayout>